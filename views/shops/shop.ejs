<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>AdminLTE</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
    <link rel="stylesheet" type="text/css" href="../css/stylee.css" />
  
  </head>
  <body>
    <div class="container-fluid">
        <div class="row vh-100">
            <div class="col-lg-3 bg-secondary ">
                <div class="row py-2 border-bottom">
                    <h1>AdminLTE</h1>
                </div>
                <ul class="list-unstyled">
                  <li class="my-3"><a href="/admin/shop"><i class="bi bi-house-door"></i> Shop Information</a></li>
                  <li class="my-4-5"><a href="/admin/contact"><i class="bi bi-newspaper"></i> Contact</a></li>
                  <li class="my-4-5"><a href="/admin/social"><i class="bi bi-newspaper"></i> Social</a></li>
                  <li class="my-4-5"><a href="/admin/role"><i class="bi bi-person"></i>Role </a></li>
                  <li class="my-4-5"><a href="/admin/service"><i class="bi bi-book-half"></i> Service</a></li>
                  <li class="my-4-5"><a href="/admin/user"><i class="bi bi-columns-gap"></i> User</a></li>
                  <li class="my-4-5"><a href="/admin/comment"><i class="bi bi-house-door"></i>Comments</a></li>
                  <li class="my-4-5"><a href="/admin/review"><i class="bi bi-newspaper"></i> Reviews</a></li>
                  <li class="my-4-5"><a href="/admin/order"><i class="bi bi-newspaper"></i> Orders</a></li>
                  <li class="my-4-5"><a href="/admin/blog"><i class="bi bi-newspaper"></i> Blogs</a></li>
                  <li class="my-4-5"><a href="/admin/categories"><i class="bi bi-person-square"></i> Categories</a></li>
                  <li class="my-4-5"><a href="/admin/tag"><i class="bi bi-newspaper"></i> Tags</a></li>
                  <li class="my-4-5"><a href="/admin/product"><i class="bi bi-columns-gap"></i> Product</a></li>
                  <li class="my-4-5"><a href="/admin/img-pro"><i class="bi bi-newspaper"></i> Image Product</a></li>
                  <li class="my-4-5"><a href="/admin/user-class"><i class="bi bi-newspaper"></i> Users Clas</a></li>
                  <li class="my-4-5"><a href="/admin/discount"><i class="bi bi-newspaper"></i> Discounts</a></li>
                  <li class="my-4-5"><a href="/admin/size"><i class="bi bi-newspaper"></i> Size</a></li>
                  <li class="my-4-5"><a href="/admin/color"><i class="bi bi-newspaper"></i> Color</a></li>

                 
                </ul>
            </div>
            <div class="col-lg-9  ">
                <div class="row text-center">
                    <h2>Shop</h2> 
                      
                    <table class="table">
                      <thead>
                        <tr>
                          <th>ID</th>
                          <th>Name</th>
                          <th>Logo</th>
                          <th>Mail</th>
                          <th>Phone</th>
                          <th>Address</th>
                          <th>Description</th>
                          
                         
                         
                        </tr>
                      </thead>
                      <tbody>
                        <% for (var i =0 ; i < data.length; i++) {%>
                        <tr>
                          <td><%= data[i].id %></td>
                          <td><%= data[i].name %></td>
                          <td><img src="../<%= data[i].logo %>" class=" img-fluid" width="20px" height="5px"></td>
                          <td><%= data[i].mail %></td>
                          <td><%= data[i].phone %></td>
                          <td><%= data[i].address %></td>
                          <td><%= data[i].description %></td>
                          
                          <td><a href="/admin/shopp/<%= data[i].id %>">View
                            /<a href="/admin/shopdele/<%= data[i].id %>">Delete</a></td>
                  
                        </tr>
                        <% }%>
                        
                      </tbody>
                    </table>
                
          
                </div>
                <a href="/admin/create-shop" class="btn btn-dark">Create</a>
            </div>
            
          </div>
  </body>
</html>