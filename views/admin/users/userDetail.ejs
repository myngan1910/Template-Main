<!doctype html>
<html lang="en">
  <%- include('../../layout/admin/header'); -%>
  <body>
    <div class="container-fluid">
        <div class="row vh-100">
          <%- include('../../layout/admin/sidebar'); -%>
          <div class="col-lg-9  ">
            <div class="row text-center">
                <h2>View Users</h2> 
            </div>
                <form action="/admin/user/<%= userDetail.id %>" method="post"  enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="avata">Avata:</label>
                        <img src="../../<%= userDetail.avata %>" alt="" class=" img-fluid mt-3" width="200px"  >
                        <input type="file"  name="avata" /><br>
                        <label for="fname">First Name:</label>
                        <input type="text" class="form-control" id="fname" value="<%= userDetail.fname %>" name="fname">
                        <label for="lname">Last Name:</label>
                        <input type="text" class="form-control" id="lname" value="<%= userDetail.lname %>" name="lname">
                        <label for="mail">Mail:</label>
                        <input type="text" class="form-control" id="mail" value="<%= userDetail.mail %>" name="mail">
                        <label for="phone">Phone:</label>
                        <input type="text" class="form-control" id="phone" value="<%= userDetail.phone %>" name="phone">
                        <label for="adddress1">Address 1:</label>
                        <input type="text" class="form-control" id="adddress1" value="<%= userDetail.address1 %>" name="address1">
                        <label for="address2">Address 2:</label>
                        <input type="text" class="form-control" id="address2" value="<%= userDetail.address2 %>" name="address2">
                        <label for="pass">Pass:</label>
                        <input type="text" class="form-control" id="pass" value="<%= userDetail.pass %>" name="pass">
                        <label for="postal">Postal:</label>
                        <input type="text" class="form-control" id="postal" value="<%= userDetail.postal %>" name="postal">
                        <label for="contry">Contry:</label>
                        <input type="text" class="form-control" id="contry" value="<%= userDetail.contry %>" name="contry">
                        <label for="state">State:</label>
                        <input type="text" class="form-control" id="state" value="<%= userDetail.state %>" name="state">
                        <label for="company">Company:</label>
                        <input type="text" class="form-control" id="company" value="<%= userDetail.state %>" name="company">
                        <label for="roleid">Roleid:</label>
                        <select type="text" class="form-control" value="" name="roleid">
                            <% for(var i=0; i< roleid.length;i++){%>
                            <option VALUE="<%=roleid[i].id %>"><%=roleid[i].id %></option>
                        <%}%>
                            </select>
                        
                        
                        
                    
                        
                        
                    </div>
                    <button type="submit" class="btn btn-dark">Edit</button>
                    <a href="/admin/user"><button  class="btn btn-dark">Cancel</button></a> 
                </form>
            </div>
         
        </div>
    </div>
    
  </body>
</html>
