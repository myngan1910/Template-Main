<!doctype html>
<html lang="en">
  <%- include('../../layout/admin/header'); -%>
  <body>
    <div class="container-fluid">
        <div class="row vh-100">
          <%- include('../../layout/admin/sidebar'); -%>
            <div class="col-lg-9  ">
                <div class="row text-center">
                    <h3>View Image</h3> 
                 
                </div>
                
                <form action="/admin/img/<%= imgDetail.id %>" method="post" >
                    <div class="form-group">
                        <label for="image">Image:</label>
                        <img src="../../<%= imgDetail.image %>" alt="" class=" img-fluid mt-3" width="200px"  >
                        <input type="file"  name="image" multiple/><br>
                        <label for="productid">Productid:</label>
                        <select type="text" class="form-control" value="<%= imgDetail.productid %>" name="productid">
                            <% for(var i=0; i< productid.length;i++){%>
                               <option VALUE="<%=productid[i].id %>"><%=productid[i].id %></option>
                           <%}%>
                             </select>
                          
                          
                       
                         
                          
                    </div>
                    <button type="submit" class="btn btn-dark">Edit</button>
                 
                   
                  </form>
                  <a href="/admin/img"><button  class="btn btn-dark">Cancel</button></a> 
                  </div>
        </div>
    </div>
    
  </body>
</html>