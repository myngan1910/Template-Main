  <body>
    <div class="container-fluid">
        <div class="row vh-100">
            <div class="col-lg-3 bg-secondary ">
                <div class="row py-2 border-bottom">
                    <h1>Admin</h1>
                </div>
                <ul class="list-unstyled">
                    <li class="my-3"><a href="/admin/shop"><i class="bi bi-house-door"></i> Shop Information</a></li>
                    <li class="my-4-5"><a href="/admin/contact"><i class="bi bi-newspaper"></i> Contact</a></li>
                    <li class="my-4-5"><a href="/admin/social"><i class="bi bi-newspaper"></i> Social</a></li>
                    <li class="my-4-5"><a href="/admin/role"><i class="bi bi-person"></i>Role </a></li>
                    <li class="my-4-5"><a href="/admin/service"><i class="bi bi-book-half"></i> Service</a></li>
                    <li class="my-4-5"><a href="/admin/user"><i class="bi bi-columns-gap"></i> User</a></li>
                    <li class="my-4-5"><a href="/admin/comment"><i class="bi bi-house-door"></i>Comments</a></li>
                    <li class="my-4-5"><a href="/admin/review"><i class="bi bi-newspaper"></i> Reviews</a></li>
                    <li class="my-4-5"><a href="/admin/order"><i class="bi bi-newspaper"></i> Orders</a></li>
                    <li class="my-4-5"><a href="/admin/blog"><i class="bi bi-newspaper"></i> Blogs</a></li>
                    <li class="my-4-5"><a href="/admin/categories"><i class="bi bi-person-square"></i> Categories</a></li>
                    <li class="my-4-5"><a href="/admin/tag"><i class="bi bi-newspaper"></i> Tags</a></li>
                    <li class="my-4-5"><a href="/admin/product"><i class="bi bi-columns-gap"></i> Product</a></li>
                    <li class="my-4-5"><a href="/admin/img-pro"><i class="bi bi-newspaper"></i> Image Product</a></li>
                    <li class="my-4-5"><a href="/admin/user-class"><i class="bi bi-newspaper"></i> Users Clas</a></li>
                    <li class="my-4-5"><a href="/admin/discount"><i class="bi bi-newspaper"></i> Discounts</a></li>
                    <li class="my-4-5"><a href="/admin/size"><i class="bi bi-newspaper"></i> Size</a></li>
                    <li class="my-4-5"><a href="/admin/color"><i class="bi bi-newspaper"></i> Color</a></li>
  
                    <li class="my-4-5"><a href="/admin/endow"><i class="bi bi-newspaper"></i> Maketing Endow</a></li>
                    <li class="my-4-5"><a href="/admin/promo"><i class="bi bi-newspaper"></i> Promotion</a></li>
                  </ul>
            </div>
            <div class="col-lg-9  ">
                <div class="row text-center">
                    <h3>View Users</h3> 
                 
                </div>
                
                <form action="/admin/user/<%= userDetail.id %>" method="post"  enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="avata">Avata:</label>
                        <img src="../../<%= userDetail.avata %>" alt="" class=" img-fluid mt-3" width="200px"  >
                        <input type="file"  name="avata" /><br>
                        <label for="fname">First Name:</label>
                        <input type="text" class="form-control" id="fname" value="<%= userDetail.fname %>" name="fname">
                        <label for="lname">Last Name:</label>
                        <input type="text" class="form-control" id="lname" value="<%= userDetail.lname %>" name="lname">
                        <label for="mail">Mail:</label>
                        <input type="text" class="form-control" id="mail" value="<%= userDetail.mail %>" name="mail">
                        <label for="phone">Phone:</label>
                        <input type="text" class="form-control" id="phone" value="<%= userDetail.phone %>" name="phone">
                        <label for="adddress1">Address 1:</label>
                        <input type="text" class="form-control" id="adddress1" value="<%= userDetail.address1 %>" name="address1">
                        <label for="address2">Address 2:</label>
                        <input type="text" class="form-control" id="address2" value="<%= userDetail.address2 %>" name="address2">
                        <label for="pass">Pass:</label>
                        <input type="text" class="form-control" id="pass" value="<%= userDetail.pass %>" name="pass">
                        <label for="postal">Postal:</label>
                        <input type="text" class="form-control" id="postal" value="<%= userDetail.postal %>" name="postal">
                        <label for="contry">Contry:</label>
                        <input type="text" class="form-control" id="contry" value="<%= userDetail.contry %>" name="contry">
                        <label for="state">State:</label>
                        <input type="text" class="form-control" id="state" value="<%= userDetail.state %>" name="state">
                        <label for="company">Company:</label>
                        <input type="text" class="form-control" id="company" value="<%= userDetail.state %>" name="company">
                        <label for="roleid">Roleid:</label>
                        <select type="text" class="form-control" value="" name="roleid">
                            <% for(var i=0; i< roleid.length;i++){%>
                               <option VALUE="<%=roleid[i].id %>"><%=roleid[i].id %></option>
                           <%}%>
                             </select>
                        
                          
                          
                       
                         
                          
                    </div>
                    <button type="submit" class="btn btn-dark">Edit</button>
                 
                   
                  </form>
                  <a href="/admin/blog"><button  class="btn btn-dark">Cancel</button></a> 
                  </div>
        </div>
    </div>
    
  </body>
</html>