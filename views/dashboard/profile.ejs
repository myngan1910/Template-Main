<%- include('../layout/dashboard/headview'); -%>
<body class="js">
	
	<!-- Preloader -->
	<div class="preloader">
		<div class="preloader-inner">
			<div class="preloader-icon">
				<span></span>
				<span></span>
			</div>
		</div>
	</div>
	<!-- End Preloader -->
		
		<!-- Header -->
		<%- include('../layout/dashboard/headerr'); -%>
		<!--/ End Header -->
	
		<!-- Breadcrumbs -->
		<div class="breadcrumbs">
			<div class="container">
				<div class="row">
					<div class="col-12">
						<div class="bread-inner">
							<ul class="bread-list">
								<li><a href="/">Home<i class="ti-arrow-right"></i></a></li>
								<li class="active"><a href="/profile">Profile</a></li>
							</ul>
						</div>
					</div>
				</div>
			</div>
		</div>
		<!-- End Breadcrumbs -->
				
		<!-- Start Checkout -->
		<section class="shop checkout section">
			<div class="container">
				<div class="row"> 
					<form class="form" method="post" action="/profile" enctype="multipart/form-data">

					<div class="col-lg-8 col-12">
						<div class="checkout-form">
							<h4>Profile Information</h4>
							<p>Please check information profile</p>
							<!-- Form -->
								<div class="row">
									<div class="col-lg-6 col-md-6 col-12">
										<div class="form-group">
											<label>First Name<span>*</span></label>
											<input type="text" name="fname" placeholder="" required="required" value="<%= user.fname%>">
										</div>
									</div>
									<div class="col-lg-6 col-md-6 col-12">
										<div class="form-group">
											<label>Last Name<span>*</span></label>
											<input type="text" name="lname" placeholder="" required="required" value="<%= user.lname%>">
										</div>
									</div>
									<div class="col-lg-6 col-md-6 col-12">
										<div class="form-group">
											<label>Email Address<span>*</span></label>
											<input type="email" name="mail" placeholder="" required="required" value="<%= user.mail%>">
										</div>
									</div>
									<div class="col-lg-6 col-md-6 col-12">
										<div class="form-group">
											<label>Phone Number<span>*</span></label>
											<input type="number" name="phone" placeholder="" required="required" value="<%= user.phone%>">
										</div>
									</div>
									<div class="col-lg-6 col-md-6 col-12">
										<div class="form-group">
											<label>Country<span>*</span></label>
											<input type="text" name="country" placeholder="" required="required" value="<%= user.contry%>">
												
										</div>
									</div>
									<div class="col-lg-6 col-md-6 col-12">
										<div class="form-group">
											<label>State / Divition<span>*</span></label>
											<input type="text" name="state" placeholder="" required="required" value="<%= user.state%>">
										</div>
									</div>
									<div class="col-lg-6 col-md-6 col-12">
										<div class="form-group">
											<label>Address Line 1<span>*</span></label>
											<input type="text" name="address1" placeholder="" required="required" value="<%= user.address1%>">
										</div>
									</div>
									<div class="col-lg-6 col-md-6 col-12">
										<div class="form-group">
											<label>Address Line 2<span>*</span></label>
											<input type="text" name="address2" placeholder="" required="required" value="<%= user.address2%>">
										</div>
									</div>
									<div class="col-lg-6 col-md-6 col-12">
										<div class="form-group">
											<label>Postal Code<span>*</span></label>
											<input type="text" name="postal" placeholder="" required="required" value="<%= user.postal%>">
										</div>
									</div>
									<div class="col-lg-6 col-md-6 col-12">
										<div class="form-group">
											<label>Company<span>*</span></label>
											<input type="text" name="company" placeholder="" required="required" value="<%= user.company%>">
										</div>
									</div>
									
								</div>
							
							<!--/ End Form -->
						</div>
					</div>
					<div class="col-lg-4 col-12">
						<div class="order-details">
							<!-- Order Widget -->
                            
							<div class="single-widget" style="    width: 314px;
							height: 115px;
							margin-top: -449px;
							margin-left: 750px;">
								
								<img class="default-img" src="../<%= user.avata%>" alt="image"  >
								
							</div>
							
							
							
							<!--/ End Button Widget -->
						</div>
					</div>
                    <button type="submit" class="btn btn-dark">Edit Profile</button>
					</form>
				</div>
			</div>
		</section>
		
		<%- include('../layout/dashboard/footer'); -%>
		<!-- /End Footer Area -->
 
	<!-- Jquery -->
	<%- include('../layout/dashboard/script'); -%>
</body>
</html>