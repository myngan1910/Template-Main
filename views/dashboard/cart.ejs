	<!-- Shopping Cart -->
	 <form action="/checkout" method="post">
	<div class="shopping-cart section">
		<div class="container">
			<div class="row">
				<div class="col-12">
					<!-- Shopping Summery -->
					<table class="table shopping-summery">
						<thead>
							<tr class="main-hading">
								<th></th>
								<th>PRODUCT</th>
								<th>NAME</th>
								<th>PRICE</th>
								<th class="text-center">QUANTITY</th>
								<th class="text-center">TOTAL</th> 
								<th class="text-center"><i class="ti-trash remove-icon"></i></th>
							</tr>
						</thead>
						<tbody>
							<% if(cart != undefined){%> 
							<% for(var i=0; i < cart.length; i++){%>
								
							<tr id="<%= cart[i].product.id%>">
								<td> <input name="product" id="<%= cart[i].product.id%>" type="checkbox" value="<%= cart[i].product.id%>"  onchange="updateCheckedRows()"></td>
								<td class="image" data-title="No"><img src="<%= cart[i].product.image[0].image%>" alt="#"></td>
								<td class="product-des" data-title="Description">
									<p class="product-name"><a href=""><%= cart[i].product.name%></a></p>
									<p class="product-des"><%= cart[i].product.description%></p>
								</td>
								<td class="price" data-title="Price" >$<span><%= cart[i].product.price %></span></td>

								<td class="qty" data-title="Qty"><!-- Input Order -->
									<div class="input-group">
										<div class="button minus">
											<button type="button" class="btn btn-primary btn-number" data-type="minus" id="<%= cart[i].product.id %>" data-field="quant[<%= cart[i].product.id %>]" onclick="changes(this)">
												<i class="ti-minus"></i>
											</button>
										</div>
										<input type="text" name="quant<%= cart[i].product.id %>" class="input-number" data-min="1" data-max="100" value="<%= cart[i].quanlity %>"  >
										<div class="button plus">
											<button type="button" class="btn btn-primary btn-number" data-type="plus" data-field="quant[<%= cart[i].product.id %>]" id="<%= cart[i].product.id %>" onclick="changes(this)">
												<i class="ti-plus"></i>
											</button>
										</div>
									</div>
								<!--/ End Input Order -->
								</td>
								<td class="total-amount" data-title="Total">
									$<span><%= parseInt(cart[i].product.price) * parseInt(cart[i].quanlity) %></span>
								</td>
								<td class="remove" data-title="Remove"><a href="/product/delete/<%= cart[i].product.id%>"><i class="ti-trash remove-icon"></i></a></td>

							</tr>
							<%}%>
							<% }%>
			
						</tbody>
					</table>
					<!--/ End Shopping Summery -->
				</div>
			</div>
			<div class="row">
				<div class="col-12">
					<!-- Total Amount -->
					<div class="total-amount">
						<div class="row">
							<div class="col-lg-8 col-md-5 col-12">
								<div class="left">
									<div class="coupon">
										<form action="#" target="_blank">
											<input name="Coupon" placeholder="Enter Your Coupon">
											<button class="btn">Apply</button>
										</form>
									</div>
									<div class="checkbox">
										<label class="checkbox-inline" for="2"><input name="product"  type="checkbox"  onchange="updateTotal()"> Shipping (+10$)</label>
									</div>
								</div>
							</div>
							<div class="col-lg-4 col-md-7 col-12">
								<div class="right">
									<ul>
										<% if(cart != undefined && cart.length > 0){%>
										<li>Cart Subtotal<span id="cartSubtotala">$0.00</span></li>
							
										</span></li>
										<li>Shipping<span>Free</span></li>
										<!-- <li>You Save<span>$20.00</span></li> -->
										<li class="last">You Pay<span id="totalPaya">$0.00</span></li>
									</ul>
									<%}%>
									<div class="button5">
										<button type="submit" class="btn">Checkout</button>
										<a href="/" class="btn">Continue shopping</a>
									</div>
								</div>
							</div>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
					<!--/ End Total Amount -->
					
	<!--/ End Shopping Summery -->



	<!--/ End Shopping Cart -->
			
