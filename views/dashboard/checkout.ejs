<%- include('../layout/dashboard/headview'); -%>
<body class="js">
	
	<!-- Preloader -->
	<div class="preloader">
		<div class="preloader-inner">
			<div class="preloader-icon">
				<span></span>
				<span></span>
			</div>
		</div>
	</div>
	<!-- End Preloader -->
		
		<!-- Header -->
		<%- include('../layout/dashboard/headerr'); -%>
		<!--/ End Header -->
	
		<!-- Breadcrumbs -->
		<div class="breadcrumbs">
			<div class="container">
				<div class="row">
					<div class="col-12">
						<div class="bread-inner">
							<ul class="bread-list">
								<li><a href="/">Home<i class="ti-arrow-right"></i></a></li>
								<li class="active"><a href="/checkout">Checkout</a></li>
							</ul>
						</div>
					</div>
				</div>
			</div>
		</div>
		<!-- End Breadcrumbs -->
				
		<!-- Start Checkout -->
		<section class="shop checkout section">
			<div class="container">
				<div class="row"> 
					<div class="col-lg-8 col-12">
						<div class="checkout-form">
							<h2>Make Your Checkout Here</h2>
							<p>Please check information for faster payment</p>
							<!-- Form -->
							<form class="form"  method="post" action="/checkout/checkorder/<%= idorder %>">
								<div class="row">
									<div class="col-lg-6 col-md-6 col-12">
										<div class="form-group">
											<label> Name<span>*</span></label>
											<input type="text" name="lname" placeholder="" required="required" value="  <%=user.lname%>">
										</div>
									</div>
									
									<div class="col-lg-6 col-md-6 col-12">
										<div class="form-group">
											<label>Email Address<span>*</span></label>
											<input type="email" name="email" placeholder="" required="required" value="<%= user.mail%>">
										</div>
									</div>
									<div class="col-lg-6 col-md-6 col-12">
										<div class="form-group">
											<label>Phone Number<span>*</span></label>
											<input type="number" name="number" placeholder="" required="required" value="<%= user.phone%>">
										</div>
									</div>
									<div class="col-lg-6 col-md-6 col-12">
										<div class="form-group">
											<label>Country<span>*</span></label>
											<input type="text" name="country" placeholder="" required="required" value="<%= user.contry%>">
												
										</div>
									</div>
									<div class="col-lg-6 col-md-6 col-12">
										<div class="form-group">
											<label>State / Divition<span>*</span></label>
											<input type="text" name="state" placeholder="" required="required" value="<%= user.state%>">
										</div>
									</div>
									<div class="col-lg-6 col-md-6 col-12">
										<div class="form-group">
											<label>Address<span>*</span></label>
											<input type="text" name="address" placeholder="" required="required" value="<%= user.address1%>">
										</div>
									</div>
									
									<div class="col-lg-6 col-md-6 col-12">
										<div class="form-group">
											<label>Postal Code<span>*</span></label>
											<input type="text" name="postal" placeholder="" required="required" value="<%= user.postal%>">
										</div>
									</div>
									<div class="col-lg-6 col-md-6 col-12">
										<div class="form-group">
											<label>Company<span>*</span></label>
											<input type="text" name="company" placeholder="" required="required" value="<%= user.company%>">
										</div>
									</div>
									
								</div>
							<!--/ End Form -->
						</div>
					</div>
					<div class="col-lg-4 col-12">
						<div class="order-details">
							<!-- Order Widget -->
							<div class="single-widget">
								<h2>CART  TOTALS</h2>
								<div class="content">
									<ul>
										<li>Sub Total: <span>$<%= account%>.00</span></li>
										<li>(+) Shipping<span>$<%= coupon[0].coupon.pricemin%></span></li>
										<li class="last">Total: <span>$<%= account - coupon[0].coupon.pricemin %>.00</span></li>
									</ul>
								</div>
							</div>

							<!--/ End Order Widget -->
							
							<!-- Order Widget -->
							<!-- <div class="single-widget">
								<h2>Payments</h2>
								<div class="content">
									<div class="checkbox">
										<label class="checkbox-inline" for="1"><input name="updates" id="1" type="checkbox"> Check Payments</label>
										<label class="checkbox-inline" for="2"><input name="news" id="2" type="checkbox"> Cash On Delivery</label>
										<label class="checkbox-inline" for="3"><input name="news" id="3" type="checkbox"> PayPal</label>
									</div>
								</div>
							</div> -->
							<!--/ End Order Widget -->
							<!-- Payment Method Widget -->
							<div class="single-widget payement">
								<div class="content">
									<img src="images/payment-method.png" alt="#">
								</div>
							</div>
							<!--/ End Payment Method Widget -->
							<!-- Button Widget -->
							<div class="single-widget get-button">
								<div class="content">
									<div class="button">
											<button type="submit" class="btn">proceed to checkout</button>
					</form>
									</div>
								</div>
							</div>
							
							<!--/ End Button Widget -->
						</div>
						
					</div>
					<!-- <div class="checkout-form" id="hiddenForm1" style="display: none;"> -->
						
					<!-- </div> -->
					
					</div>

				</div>
			</div>
		</section>
		
		<!--/ End Checkout -->
		
		<!-- Start Shop Services Area  -->
		<%- include('../layout/dashboard/service'); -%>
		<!-- End Shop Newsletter -->
			
		<!-- Start Footer Area -->
		<%- include('../layout/dashboard/footer'); -%>
		<!-- /End Footer Area -->
 
	<!-- Jquery -->
	<%- include('../layout/dashboard/script'); -%>
</body>
</html>